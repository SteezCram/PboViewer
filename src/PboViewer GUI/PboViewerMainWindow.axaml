		</Style>
	</Window.Styles>

	<Border Classes="Card" Margin="10">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="0"/>
			</Grid.ColumnDefinitions>

			<StackPanel Margin="0,0,10,0">
				<TextBlock Classes="Accent" Text="PBO Viewer actions" FontSize="18" Margin="0,0,0,20"
						   FontWeight="Medium"/>

				<!--<Button FontSize="14" Margin="0,0,0,20"
						Command="{Binding OpenPBO}">
					
					<StackPanel Orientation="Horizontal">
						<DrawingPresenter Height="19" Width="19" Drawing="{DynamicResource Material.FileSearch}"/>
						<TextBlock FontSize="14" Text="Open a PBO file" Margin="5,0,0,0"/>
					</StackPanel>
				</Button>-->

				<Button FontSize="14" Margin="0,0,0,20"
						Command="{Binding UnpackPbo}">

					<StackPanel Orientation="Horizontal">
						<DrawingPresenter Height="19" Width="19" Drawing="{DynamicResource Material.FolderOpen}"/>
						<TextBlock FontSize="14" Text="Unpack a PBO file" Margin="5,0,0,0"/>
					</StackPanel>
				</Button>

				<Button FontSize="14" Margin="0,0,0,50"
						Command="{Binding PackFolder}">

					<StackPanel Orientation="Horizontal">
						<DrawingPresenter Height="19" Width="19" Drawing="{DynamicResource Material.Package}"/>
						<TextBlock FontSize="14" Text="Pack a folder" Margin="5,0,0,0"/>
					</StackPanel>
				</Button>
				
				<ProgressBar IsIndeterminate="{Binding ProgressBarIsIndeterminate}"/>
			</StackPanel>

			<StackPanel Grid.Column="1" Margin="10,0,0,0">
				<!--<TextBlock Classes="Accent" Text="PBO file view" FontSize="18" Margin="0,0,0,20"
						   FontWeight="Medium"/>
				
				<TreeView BorderThickness="0" Margin="0,0,0,20" Items="{Binding PboTreeViewItems}"/>

				<Button FontSize="14" Margin="0,0,0,20"
						Command="{Binding UnpackPbo}"
						IsVisible="{Binding UnpackPboButtonIsVisible}">

					<StackPanel Orientation="Horizontal">
						<DrawingPresenter Height="19" Width="19" Drawing="{DynamicResource Material.FolderOpen}"/>
						<TextBlock FontSize="14" Text="Unpack the current PBO file" Margin="5,0,0,0"/>
					</StackPanel>
				</Button>-->
			</StackPanel>
		</Grid>
	</Border>
</Window>
